<body>
<div class="container">
  <h1>Aplicação Web</h1>
  <!-- EXEMPLO 1 -->
  <h2>Exemplo 1️⃣ - Pedido </h2>
  <label>Valor do pedido (R$)</label>
  <input type="number" id="valorPedido" />
  <label>Cliente ativo?</label>
  <select id="clienteAtivo">
    <option value="S">Sim</option>
    <option value="N">Não</option>
  </select>
  <button onclick="avaliarPedido()">Avaliar Pedido</button>
  <div id="resultadoPedido" class="resultado"></div>
  <!-- EXEMPLO 2 -->
  <h2>Exemplo 2️⃣ - Temperatura</h2>
  <label>Temperatura atual (°C)</label>
  <input type="number" id="temperatura" />
  <button onclick="verificarTemperatura()">Verificar Temperatura</button>
  <div id="resultadoTemperatura" class="resultado"></div>
  <!-- EXEMPLO 3 -->
  <h2>Exemplo 3️⃣ -Rotina</h2>
  <button onclick="executarRotina()">Executar Rotina Automática</button>

  <div id="resultadoRotina" class="resultado info"></div>
</div>

<script>
  // EXEMPLO 1
  function avaliarPedido() {
    const valor = parseFloat(document.getElementById('valorPedido').value);
    const ativo = document.getElementById('clienteAtivo').value;
    const resultado = document.getElementById('resultadoPedido');

    if (ativo === 'S' && valor <= 2000) {
      resultado.className = 'resultado aprovado';
      resultado.innerText = 'Pedido aprovado automaticamente.';
    } else {
      resultado.className = 'resultado reprovado';
      resultado.innerText = 'Pedido rejeitado automaticamente.';
    }
  }
  // EXEMPLO 2
  function verificarTemperatura() {
    const temp = parseInt(document.getElementById('temperatura').value);
    const resultado = document.getElementById('resultadoTemperatura');
    if (temp > 40) {
      resultado.className = 'resultado reprovado';
      resultado.innerText = 'Temperatura alta! Ar-condicionado ligado automaticamente.';
    } else {
      resultado.className = 'resultado aprovado';
      resultado.innerText = 'Temperatura adequada. Nenhuma ação necessária.';
    }
  }
  // EXEMPLO 3
  function executarRotina() {
    const resultado = document.getElementById('resultadoRotina');
    resultado.innerHTML = 'Relatório gerado automaticamente.<br>Notificação enviada automaticamente.<br>Rotina finalizada com sucesso.';
  }
</script>
