    }
    h1 {
      text-align: center;
      color: #333;
    }
    h2 {
      margin-top: 30px;
      color: #444;
    }
    label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }
    input, select, button {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 16px;
    }
    button {
      margin-top: 20px;
      background: #007bff;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    .resultado {
      margin-top: 20px;
      padding: 15px;
      border-radius: 6px;
      font-weight: bold;
    }
    .aprovado {
      background: #d4edda;
      color: #155724;
